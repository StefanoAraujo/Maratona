<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maratona.Views.NovaTarefaPage">

    <StackLayout VerticalOptions="Start" Margin="10,0,10,0">
        <StackLayout Orientation="Horizontal">
            <Entry Text="{Binding Nome}" Placeholder="Nome" HorizontalOptions="FillAndExpand"/>
            <Entry Text="{Binding Local}" Placeholder="Local" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <Entry Text="{Binding Descricao}" Placeholder="Descrição" HorizontalOptions="FillAndExpand"/>
        <DatePicker HorizontalOptions="FillAndExpand" BindingContext="{Binding Data}"/>
        <Button Text="Adicionar" HorizontalOptions="FillAndExpand" Command="{Binding AddTarefaCommand}"/>
    </StackLayout>

</ContentPage>